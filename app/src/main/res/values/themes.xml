<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyMoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/abs_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/abs_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/abs_white</item>
    </style>

    <style name="Theme.MyMoviesApp.MovieDetailsTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ExpandedTitleStyle">
        <item name="android:textColor">@color/abs_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ToolbarButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:src">@drawable/ic_search</item>
        <item name="android:contentDescription">@string/search_description</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/details_circle_button</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="SearchBackButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/search_back_button</item>
        <item name="android:contentDescription">@string/back_description</item>
    </style>

    <style name="DetailsTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FavoriteLoadingInvisibleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:visibility">invisible</item>
        <item name="android:tint">@color/loading_background</item>
        <item name="android:src">@drawable/reservoir_dogs</item>
    </style>

</resources>
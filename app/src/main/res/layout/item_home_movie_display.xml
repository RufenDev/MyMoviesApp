<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="238dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:contentDescription="@string/more_info"
            android:id="@+id/btnHomeMovieCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            tools:src="@drawable/reservoir_dogs" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHomeMovieName"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingHorizontal="4dp"
            android:textColor="@color/title_color"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck"
            tools:text="Spider-Man: Across the Spider-Verse" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnSelectHomeMovie"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/see_options"
            android:src="@drawable/ic_more_options"
            android:tint="@color/title_color"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>